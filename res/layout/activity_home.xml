<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tab_tv_unpress"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layTabRecord"
            style="@style/HomeTabLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/iv_tabMain"
                style="@style/HomeTabImageView"
                android:src="@drawable/menu_home_default" />

        </LinearLayout>
		<!-- <View
		    android:layout_width="0.5dp"
		    android:layout_height="46dp"
		    android:background="#797979" 
		    /> -->

        <LinearLayout
            android:id="@+id/layTabConstult"
            style="@style/HomeTabLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/iv_tabInformation"
                style="@style/HomeTabImageView"
                android:src="@drawable/menu_read_deafult" />
        </LinearLayout>
		<!-- <View
		    android:layout_width="0.5dp"
		    android:layout_height="46dp"
		    android:background="#797979" 
		    /> -->

        <LinearLayout
            android:id="@+id/layTabHome"
            style="@style/HomeTabLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/iv_tabSelfDiagnosis"
                style="@style/HomeTabImageView"
                android:src="@drawable/menu_information_deafult" />
        </LinearLayout>
		<!-- <View
		    android:layout_width="0.5dp"
		    android:layout_height="46dp"
		    android:background="#797979" 
		    /> -->

        <LinearLayout
            android:id="@+id/layTabData"
            style="@style/HomeTabLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/iv_tabAskDoctor"
                style="@style/HomeTabImageView"
                android:src="@drawable/menu_ask_default" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
