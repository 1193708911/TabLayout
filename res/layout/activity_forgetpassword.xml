<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_form"
    android:orientation="vertical" >

    <include layout="@layout/page_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:layout_weight="6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/img1_forgetpwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_user_number" />

                <EditText
                    android:id="@+id/et_forgetpwd_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:paddingBottom="15dp"
                    android:paddingLeft="60dp"
                    android:textSize="@dimen/txt_normal_size" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/img2_forgetpwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_check" />

                <EditText
                    android:id="@+id/et_forgetpwd_checkCod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingBottom="15dp"
                    android:paddingLeft="60dp"
                    android:textSize="@dimen/txt_normal_size" >
                </EditText>

                <Button
                    android:id="@+id/btn_forgetpwd_getcheckcode"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/et_forgetpwd_checkCod"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="获取验证码"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/txt_small_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/img3_forgetpwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_locked" />

                <EditText
                    android:id="@+id/et_forgetpwd_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="请设置新密码"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:paddingLeft="60dp"
                    android:textSize="@dimen/txt_normal_size" >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/img4_forgetpwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_locked" />

                <EditText
                    android:id="@+id/et_forgetpwd_pwd_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="请确认新密码"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:paddingLeft="60dp"
                    android:textSize="@dimen/txt_normal_size" >
                </EditText>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_frogetpwd_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/main"
                android:text="确认"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>